<footer class="footer is-centered">
  <div class="container">
    <div class="columns">
      <div class="column">
        {{#get "posts" limit="3" as |recent|}}
          <section class="recent-post">
            <h3>Recent Posts</h3>
            <ul>
              {{#foreach recent}}
                <li>
                  <a href="{{url}}">{{title}}</a>
                </li>
              {{/foreach}}
            </ul>
          </section>
        {{/get}}
      </div>
      <div class="column">
        <div class="title has-text-centered">
          {{#get "tags" limit="10" as |tags|}}
            <section class="recent-post">
              <h3>Tags</h3>
              <ul>
                {{#foreach tags}}
                  <li>
                    <a href="{{url}}" class="tag">{{name}}</a>
                  </li>
                {{/foreach}}
              </ul>
            </section>
          {{/get}}
        </div>
      </div>
    </div>
  </div>
</footer>